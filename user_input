import time
yearnow = time.strftime("%Y")
yearnow = int(yearnow)

x = input("your name?")  #user`s name
y = int(input("your age?"))  #user`s age

z100 = yearnow + 100 - y
print (x, "you will be 100 in the year ", z100)

print ("Tell me a number between 1 and 10")
r = int(input())

def lastmessageloop():
    e = 0
    while e < r:
        print (x, "you will be 100 in the year ", z100)
        e += 1
    
lastmessageloop()
